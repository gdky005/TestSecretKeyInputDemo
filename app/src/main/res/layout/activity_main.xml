<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gdky005.testsecretkeyinputdemo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="测试密码的输入和检测"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="私密直播，请输入收听密令"
        android:textColor="@color/black_3_color"
        android:textSize="@dimen/middle_text_size"/>

    <LinearLayout
        android:id="@+id/secret_key_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:id="@+id/secret_1"
            style="@style/secret_key_text_style"
            />
        <TextView
            android:id="@+id/secret_2"
            style="@style/secret_key_text_style"/>

        <TextView
            android:id="@+id/secret_3"
            style="@style/secret_key_text_style"/>

        <TextView
            android:id="@+id/secret_4"
            style="@style/secret_key_text_style"/>

        <TextView
            android:id="@+id/secret_5"
            style="@style/secret_key_text_style"/>
    </LinearLayout>
</LinearLayout>
